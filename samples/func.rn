# a function that adds two numbers
var add = func(x, y)
  return x + y

# a function that multiplies two numbers
# uses shorthand notation for simple functions
var mul = func(x, y) -> x * y

# a function that applies two numbers to another function
var apply = func(fn, x, y)
  return fn(x, y)

var main = func()
  print(add(3, 4))
  print(mul(3, 4))
  print("-----")
  print(apply(add, 3, 4))
  print(apply(mul, 3, 4))
  print(apply(func(x, y) -> 2*x + y, 3, 4))
